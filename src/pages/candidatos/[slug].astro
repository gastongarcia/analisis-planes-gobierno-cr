---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CandidateCard from '../../components/CandidateCard.astro';
import { analysisData } from '../../data/analysis';

export async function getStaticPaths() {
  return analysisData.candidates.map((candidate) => ({
    params: { slug: candidate.slug },
    props: { candidate },
  }));
}

const { candidate } = Astro.props;
---

<Layout title={`${candidate.name} | Análisis Político 2026`} description={`Análisis detallado de las propuestas de ${candidate.name} en Educación y Seguridad.`}>
  <Header />
  <main class="pt-32 pb-20 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <a href="/#candidatos" class="inline-flex items-center text-primary font-bold hover:translate-x-1 transition-transform gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5"/><path d="M12 19l-7-7 7-7"/></svg>
          Volver a todos los candidatos
        </a>
      </div>
      
      <div class="space-y-12">
        <div class="text-center md:text-left max-w-3xl">
          <h1 class="text-5xl md:text-7xl font-display text-slate-900 mb-6 drop-shadow-sm uppercase">
            Análisis: <span class="text-primary italic">{candidate.name}</span>
          </h1>
          <p class="text-xl text-slate-600 leading-relaxed">
            Explora el detalle de las propuestas y la evaluación de viabilidad para {candidate.subtitle}.
          </p>
        </div>

        <CandidateCard {...candidate} />
      </div>
    </div>
  </main>
  <Footer />
</Layout>
